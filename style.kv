MDBoxLayout:
    MDFloatLayout:
        MDIconButton:
            icon: 'qrcode-edit'
            font_size: 100
            pos_hint: {'center_x': 0.1,'center_y': 0.95}

        MDTextField:
            id: user
            hint_text: 'Usu√°rio'
            pos_hint: {'center_x': 0.5,'center_y': 0.6}
            icon_left: "account-circle"
            size_hint: 0.5, 0.1

        MDTextField:
            id: pwd
            hint_text: 'Senha'
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            password: True
            icon_left: "key-variant"
            size_hint: 0.5, 0.1
            
        MDIconButton:
            id: showpwd
            icon: "eye-off"
            pos_hint: {'center_x': 0.72,'center_y': 0.5}
            theme_text_color: 'Hint'
            on_release:
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                pwd.password = False if pwd.password is True else True

        MDRaisedButton:
            text: 'Login!'
            pos_hint: {'center_x': 0.5,'center_y': 0.2}
            size_hint: 0.2, 0